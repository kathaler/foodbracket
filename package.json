{
  "name": "foodbracket",
  "version": "1.0.0",
  "description": "A web app for users to choose a local restaurant through an interactive, bracket-style tournament",
  "main": "index.js",
  "scripts": {
    "build:frontend": "npm run -w lit-frontend build",
    "build:backend": "npm -w express-backend run build",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "npm run build && npm run start:backend",
    "start:frontend": "npm -w lit-frontend run dev",
    "start:backend": "npm -w express-backend run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kathaler/foodbracket.git"
  },
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "typescript": "^5.6.3"
  }
}
